public class Pera{
public void Area(int a, double b){
int area = (a*b)/2;
return area;
}

public static int perimetro(double x, double y){
double resultado;
if(x == 'a'){
resultado = x + 3.1416;
} else {
resultado = y + 2*3.1416;
}
return resultado;
}

public static void main(String[] args){
int a = 5.0;
int b = 10;

System.out.println("Area" + Area(a,b) );

int x = 10;
int y = 20;
System.out.println("Perimetro" + perimetro(x,y) );
}

}